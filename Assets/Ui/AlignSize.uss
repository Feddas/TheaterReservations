.alignsize {
}

Label.alignsizeTitle {
    font-size: 42px;
    height: 40%;
    -unity-text-align: middle-center;
}

.alignScreen {
    width: 100%;
    height: 100%;
    position: absolute;
}

.alignsize Label {
    font-size: 21px;
}

.alignsize TextInput {
    font-size: 21px;
}

Button.alignsize {
    font-size: 21px;
    transition-duration: 0.5s;
}

Button.alignsize:hover {
    scale: 2 2;
}

TextField.alignsize Label {
    -unity-text-align: upper-right;
    margin-right: 10px;
}

DropdownField.alignsize Label {
    -unity-text-align: upper-right;
    margin-right: 10px;
}
